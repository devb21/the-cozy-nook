<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/public/styles.css">
</head>
<body>
    <header>
        <div class="logo">
            <h1>The Cozy Nook</h1>
        </div>
        <nav class="navbar">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/shop">Shop</a></li>

                <% if (typeof user !== 'undefined' && user.firstname) { %>
                    <li><a href="/logout">Logout</a></li>
                    <li>Hello, <%= user.firstname %></li>
                <% } else { %>
                    <li><a href="/login">Account</a></li>
                <% } %>

                <li><a href="/cart">Cart</a></li>
                <li><a href="/wishlist">Wish List</a></li>
                <li><a href="/about">About</a></li>
            </ul>
        </nav>

        <!-- Search Bar -->
        <form action="/search" method="GET" class="search-form">
            <div style="display: flex; gap: 10px; align-items: center;">
                <!-- Dropdown for category selection -->
                <select name="category" required>
                    <option value="books">Books</option>
                    <option value="authors">Authors</option>
                    <option value="publishers">Publishers</option>
                </select>
        
                <!-- Input field for the search query -->
                <input 
                    type="text" 
                    name="query" 
                    placeholder="Search..." 
                    required 
                    style="width: 300px; padding: 8px;"
                />
        
                <!-- Search button -->
                <button type="submit" style="padding: 8px 16px;">Search</button>
            </div>
        </form>
        
        
    </header>

    <main>
        <h2>Shop Books</h2>
    
        <% Object.keys(booksByGenre).forEach(genre => { %>
            <section class="genre-section">
                <h3><%= genre %></h3>
                <div class="book-list">
                    <% booksByGenre[genre].forEach(book => { %>
                        <div class="book-item">
                            <img src="<%= book.image_url %>" alt="<%= book.book_title %>" class="book-cover" onerror="this.onerror=null; this.src='/public/images/default.jpg';">
  <h4><%= book.book_title %></h4>
                            <p>by <%= book.author_name %></p>
                            <p>Price: Â£<%= book.price %></p>
                            <a href="/book/<%= book.book_id %>">View Details</a>

                        </div>
                    <% }); %>
                </div>
            </section>
        <% }); %>
    </main>
    
    <footer>
        <p>&copy; 2025 The Cozy Nook. All rights reserved.</p>
    </footer>
</body>
</html>
